<Window x:Class="kmPorLitro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kmPorLitro"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="350">
    <Grid>
        <Label x:Name="lblKMInicial" Content="Digite KM Inicial" HorizontalAlignment="Left" Margin="41,18,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtKMInicial" HorizontalAlignment="Left" Margin="41,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblKMFinal" Content="Digite KM Final" HorizontalAlignment="Left" Margin="41,67,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtKMFinal" HorizontalAlignment="Left" Margin="41,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblLitros" Content="Qtde de Litros" HorizontalAlignment="Left" Margin="41,116,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtLitros" HorizontalAlignment="Left" Margin="41,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnCalcular" Content="Calcular" HorizontalAlignment="Left" Margin="44,182,0,0" VerticalAlignment="Top" Width="117" Click="btnCalcular_Click"/>

    </Grid>
</Window>
